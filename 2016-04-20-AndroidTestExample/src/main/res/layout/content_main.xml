<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/size_10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tech.thdev.androidtestexample.MainActivity"
    tools:showIn="@layout/activity_main">

    <EditText
        android:id="@+id/et_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/message" />

    <Button
        android:id="@+id/btn_second_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_message"
        android:text="@string/start_second_activity" />

    <Button
        android:id="@+id/btn_set_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_second_activity"
        android:text="@string/set_message" />

    <Button
        android:id="@+id/btn_web_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_set_message"
        android:text="@string/start_webview"/>
</RelativeLayout>
